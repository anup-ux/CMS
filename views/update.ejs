<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/js-datepicker/dist/datepicker.min.css">
    <script src="https://unpkg.com/js-datepicker"></script>
    <title>Update</title>
    <%- include('link.ejs') %>

</head>

<body>
    <div class="container">
        <h2>Update
            <%=updateQuery[0].title%>
        </h2>
        <form action="/update/<%=eItBuD %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Enter a title</label>
                <input type="text" name="title" class="form-control" id="titleBoot" placeholder="Enter title" value="<%=updateQuery[0].title%>">
            </div>
            <div class="form-group">
                <label for="file">Cover image</label>
                <input type="file" name="file" class="form-control" id="fileInput">
            </div>
            <div class="form-group">
                <label for="content">Enter the article contents</label>
                <textarea name="content" cols="80" rows="10" class="form-control"><%-updateQuery[0].content%></textarea>
            </div>
            <div class="form-group">
                <label for="published_at">Choose a date</label>
                <input type="text" name="published_at" class="form-control" id="date" value="<%= dateToEjs.dateReturned%>">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <script>
        const picker = datepicker('#date', {
            formatter: (input, date, instance) => {
                const value = date.toLocaleDateString()
                input.value = value // => '1/1/2099'
            }
        })
        CKEDITOR.replace('content', {
            filebrowserUploadUrl: "/update/ckeditor/<%=eItBuD %>"
        });
    </script>
    </table>

</body>

</html>